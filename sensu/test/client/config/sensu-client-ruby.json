{
  "client": {
    "name": "client-ruby",
    "address": "some.docker.network"
  },
  "rabbitmq": {
    "host": "rabbitmq",
    "port": 5672,
    "vhost": "/",
    "user": "guest",
    "password": "guest"
  },
  "checks": {
    "check-load": {
      "name": "check-load",
      "standalone": true,
      "interval": 20,
      "command": "go-check-load -w 1.0,2.0,3.0 -c 2.0,3.0,4.0"
    },
    "check-uptime": {
      "name": "check-uptime",
      "standalone": true,
      "interval": 60,
      "command": "go-check-uptime -w 3600 -c 300"
    },
    "check-tcp-linuxctl": {
      "name": "check-tcp-linuxctl",
      "standalone": true,
      "interval": 20,
      "command": "go-check-tcp -H linuxctl.com -p 80 -w 1 -c 2"
    }
  }
}
